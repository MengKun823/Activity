/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.question-bg{
  display: block;
  width: 750rpx;
  height: 480rpx;
}

.question-first{
  display: block;
  width: 750rpx;
  height: 480rpx;
  background: rgba(0, 0, 0, 0.66);
  position: absolute;
  top: 0;
  z-index: 10;
  text-align: center;
}

.question-date{
  display: inline-block;
  width: 200rpx;
  height: 124rpx;
  background: rgba(0,0,0,0.80);
  border-radius: 0 0 6rpx 6rpx;
  position: absolute;
  left: 32rpx;
}
.question-ymd{
  display: inline-block;
  position: absolute; 
  text-align: center;
  font-family: "PingFangSC-Regular";
  font-size: 22rpx;
  color: #FFFFFF;
  letter-spacing: 0.07rpx;
}
.question-year{  
  width: 62rpx;
  height: 40rpx;
  line-height: 40rpx;
  top: 22rpx;
  left: 28rpx;
}
.question-month{
  width: 62rpx;
  height: 40rpx;
  line-height: 40rpx;
  top: 62rpx;
  left: 28rpx;
}
.question-dat{
